    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es6",
      "es7"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
